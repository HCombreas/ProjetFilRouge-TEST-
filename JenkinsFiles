pipeline {
    agent any
    stages {
        stage('SCM') {
            steps {
                checkout scm
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv(installationName: 'SonarqubeScanner') {
                    sh "${tool 'SonarqubeScanner'}/bin/sonar-scanner"
                }
            }
        }
    }
}
