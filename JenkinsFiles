pipeline {
    agent any
    stages {
        stage('SCM') {
            steps {
                checkout scm
            }
        }
        stage('SonarQube Analysis') {
            environment{
                scannerHome = tool 'SonarqubeScanner'
            }
            steps {
                script {
            
                    sh "$scannerHome/bin/sonar-scanner"
                }
            }
        }
    }
}