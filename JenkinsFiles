pipeline {
    agent {
        label 'docker'
    }
   
    stages {
        
        stage('SCM') {
            agent {
                 docker {
                    image 'node:lts-bullseye-slim'
                    args '-p 3000:3000'
                 }
            }
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'apt install npm'
                sh 'export PATH=$PATH:/usr/bin/npm'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarqubeScanner'
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }
    }
}

